{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ],
    "source": "functions"
  },
  "hosting": {
    "rewrites": [
      {
        "source": "/server/**",
        "function": "app1",
        "dynamicLinks": true
      },
      {
        "source": "/client/**",
        "function": "app2",
        "dynamicLinks": true
      }
    ]
  }
}
